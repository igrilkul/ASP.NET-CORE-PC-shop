@model GPUsDetailsViewModel
@{

}

<li class="list-group-item">
    <div class="row text-center">
        <div class="col-md-3">
            <img src="@Model.ImagePath" class="rounded float-left" alt="img-thumbnail" width="150px" />
        </div>
        <div class="col-md-3">
            <h3 class="text-center">@Model.Make - @Model.Model</h3>
            <p class="text-left"><strong>Platform - </strong>@Model.Platform</p>
            <p class="text-left"><strong>Boost Clock - </strong>@Model.MinSpeed</p>
            <p class="text-left"><strong>Number of Cooling Fans - </strong>@Model.NumberOfFans</p>
            <p class="text-left"><strong>Year Released - </strong>@Model.ReleasedYear</p>
            <p class="text-left"><strong>Price - </strong>@Model.Price€</p>
        </div>
    </div>
</li>
