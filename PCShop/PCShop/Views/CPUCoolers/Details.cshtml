@model CPUCoolersDetailsViewModel
@{

}

<li class="list-group-item">
    <div class="row text-center">
        <div class="col-md-3">
            <img src="@Model.ImagePath" class="rounded float-left" alt="img-thumbnail" width="150px" />
        </div>
        <div class="col-md-3">
            <h3 class="text-center">@Model.Make - @Model.Model</h3>
            <p class="text-left"><strong>Airflow - </strong>@Model.Airflow</p>
            <p class="text-left"><strong>RPM - </strong>@Model.RPM CFM</p>
            <p class="text-left"><strong>Noise - </strong>@Model.Noise db </p>
            <p class="text-left"><strong>Dimensions - </strong>@Model.Dimensions mm</p>
            <p class="text-left"><strong>Year Released - </strong>@Model.ReleasedYear</p>
            <p class="text-left"><strong>Price - </strong>@Model.Price€</p>
        </div>
    </div>
</li>
